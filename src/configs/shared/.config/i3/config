# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus exec --no-startup-id i3-msg scratchpad show && i3-msg move position center

# modular scratchpads. Create if window doesn't exist, otherwise show
bindsym $mod+t exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
	trello "/usr/bin/google-chrome-stable --app=https://trello.com/b/cK9nA9nR/to-do" 1 ".*trello.*" 1912 1104
bindsym $mod+u exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
	dropdown "termite" 0.1 ".*sthinds.*" 712 712
bindsym $mod+c exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
	calculator "termite --title='Calculator' -e 'bc'" 0.1 ".*Calculator.*" 480 474
bindsym $mod+i exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
	ranger "termite --title='Ranger' -e 'ranger'" 0.1 ".*Ranger.*" 1320 874
bindsym $mod+b exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
    "barrier" "barrier" 0.1 ".*Barrier.*" 640 480
bindsym $mod+m exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
    spotify "/snap/bin/spotify" 3.6 ".*Spotify.*" 1340 980
bindsym $mod+n exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
    pocketcasts "/snap/bin/pocket-casts" 3.6 ".*Podcast.*" 960 1000
bindsym F9 exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
	gmail "/usr/bin/google-chrome-stable --app=https://mail.google.com/mail/u/0/" 1 ".*gmail.*" 1420 974
bindsym Print exec --no-startup-id ~/.util/i3/i3_run_scratchpad.sh \
	screenshot "/usr/bin/gnome-screenshot -i" 2 ".*Screenshot.*" 1420 974

# Uncomment if no local config
bindsym $mod+Return exec termite

# volume control
bindsym F2 exec --no-startup-id ~/.util/pactl/volume_controller.sh dec_volume 10
bindsym F3 exec --no-startup-id ~/.util/pactl/volume_controller.sh inc_volume 10
bindsym F4 exec --no-startup-id ~/.util/pactl/volume_controller.sh mute

# lock screen
bindsym $mod+F11 exec --no-startup-id ~/.config/i3/sh/lock.sh

